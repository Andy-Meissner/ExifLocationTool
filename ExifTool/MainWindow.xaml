<Window x:Class="ExifTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExifTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="803.85" Width="700">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="80"/>
            <RowDefinition Height="Auto" MinHeight="470"/>
            <RowDefinition Height="Auto" MinHeight="100"/>
            <RowDefinition Height="Auto" MinHeight="50"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Height="30" Grid.Row="0" Content="" Margin="10,10,10,40"/>
        <Button x:Name="button" Height="30" Grid.Row="0" Content="Verzeichnis öffnen" Click="open_folder" Margin="10,40,10,10"/>
        <StackPanel Name="sp" Height="450" Margin="10,0,10,0" Grid.Row="1" Width="652"/>
        <TextBox x:Name="Coordinates" Height="30" Grid.Row="2" TextWrapping="Wrap" Text="" Margin="222,43,10,83"  LostKeyboardFocus="coordinatesfield_lostfocus"/>
        <TextBox x:Name="Countryname" Height="30" Grid.Row="2" TextWrapping="Wrap" Text="" Margin="222,78,10,48"/>
        <TextBox x:Name="Photographer" HorizontalAlignment="Left" Height="30" Margin="222,113,0,13" Grid.Row="2" TextWrapping="Wrap" Text="" Width="440"/>
        <Label x:Name="label1" Content="Bildinformationen" FontSize="20" HorizontalAlignment="Left" Margin="10,1,0,0" Grid.Row="2" VerticalAlignment="Top" Width="268"/>
        <Label x:Name="label2" Content="Koordinaten" HorizontalAlignment="Left" Margin="10,43,0,0" Grid.Row="2" VerticalAlignment="Top" Width="185"/>
        <Label x:Name="label2_Copy" Content="Land" HorizontalAlignment="Left" Margin="10,78,0,0" Grid.Row="2" VerticalAlignment="Top" Width="185"/>
        <Label x:Name="label2_Copy1" Content="Fotograf" HorizontalAlignment="Left" Margin="10,113,0,0" Grid.Row="2" VerticalAlignment="Top" Width="185"/>
        <Button x:Name="button1" Height="30" Grid.Row="3" Content="Daten speichern" Click="save_image" Margin="357,8,165,117" />
        <Button x:Name="button2" Height="30" Grid.Row="3" Content="Koordinaten in Google Maps öffnen" Click="open_gmaps" Margin="10,8,448,117" />
        <Label x:Name="label3" Content="" HorizontalAlignment="Left" Margin="200,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="462"/>
        <Button x:Name="button3" Content="Überspringen" HorizontalAlignment="Left" Margin="512,8,0,0" Grid.Row="3" VerticalAlignment="Top" Width="150" Height="30" Click="btn_skipImage"/>
    </Grid>
</Window>
